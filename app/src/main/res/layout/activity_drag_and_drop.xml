<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/left_linear"
        android:layout_width="167dp"
        android:layout_height="match_parent"

        android:layout_marginBottom="10dp">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/left_grid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="5"
            tools:ignore="UselessParent">

            <!-- <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />
-->

            <Button
                android:id="@+id/word_bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:columnCount="1"
                android:ems="10"
                android:gravity="fill"
                android:rowCount="1" />

            <Button
                android:id="@+id/word_bt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:columnCount="1"
                android:ems="10"
                android:gravity="fill"
                android:rowCount="1" />

            <Button
                android:id="@+id/word_bt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:columnCount="1"
                android:ems="10"
                android:gravity="fill"
                android:rowCount="1" />

            <Button
                android:id="@+id/word_bt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:columnCount="1"
                android:ems="10"
                android:gravity="fill"
                android:rowCount="1" />

            <Button
                android:id="@+id/word_bt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:columnCount="1"
                android:ems="10"
                android:gravity="fill"
                android:rowCount="1" />

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_linear"
        android:layout_width="200dp"
        android:layout_height="fill_parent">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/right_grid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="5"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/meaning_tv1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/meaning_tv2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/meaning_tv3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/meaning_tv4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/meaning_tv5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="HardcodedText" />

        </GridLayout>


    </LinearLayout>

</GridLayout>