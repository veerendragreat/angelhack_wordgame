<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_list_id"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <!-- tools:context=".MainActivity" -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif"
        android:gravity="clip_horizontal"
        android:paddingBottom="@dimen/header_bottom_margin"
        android:paddingLeft="@dimen/header_margin"
        android:paddingRight="@dimen/header_margin"
        android:paddingTop="@dimen/header_margin"
        android:text="@string/choose_menu"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_add_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="55dp"
        android:text="@string/add_words" />

    <Button
        android:id="@+id/button_play_word_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_show_word_list"
        android:layout_marginTop="32dp"
        android:text="@string/play_word_game" />

    <Button
        android:id="@+id/button_show_word_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_add_words"
        android:layout_marginTop="30dp"
        android:text="@string/show_words_list" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/button_play_word_game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/holo_orange_dark"
        android:textStyle="bold|italic"
        tools:text="Developed by : \n  \n              Veerendra And Sainath" />

    <!-- <Button
        android:id="@+id/button_view_employees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_all_employees" /> -->
</RelativeLayout>